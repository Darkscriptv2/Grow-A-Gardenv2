

local player = game.Players.LocalPlayer
local gui = Instance.new("ScreenGui")
gui.IgnoreGuiInset = true
gui.ResetOnSpawn = false
gui.Parent = player:WaitForChild("PlayerGui")

-- Console box (upper-left corner)
local consoleBox = Instance.new("Frame")
consoleBox.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
consoleBox.BackgroundTransparency = 0.4
consoleBox.BorderSizePixel = 0
consoleBox.Position = UDim2.new(0, 5, 0, 5)
consoleBox.Size = UDim2.new(0, 350, 0, 200)
consoleBox.Parent = gui

-- Logs label
local logLabel = Instance.new("TextLabel")
logLabel.BackgroundTransparency = 1
logLabel.TextColor3 = Color3.fromRGB(0, 255, 0)
logLabel.Font = Enum.Font.Code
logLabel.TextSize = 16
logLabel.TextXAlignment = Enum.TextXAlignment.Left
logLabel.TextYAlignment = Enum.TextYAlignment.Top
logLabel.Text = ""
logLabel.Size = UDim2.new(1, -10, 1, -10)
logLabel.Position = UDim2.new(0, 5, 0, 5)
logLabel.TextWrapped = false
logLabel.TextStrokeTransparency = 0.8
logLabel.Parent = consoleBox

-- Fake log lines
local fakeLogs = {
    "[INFO] Initializing security modules...",
    "[OK] Security module loaded.",
    "[INFO] Scanning player inventory...",
    "[OK] No suspicious items found.",
    "[INFO] Checking network connection...",
    "[OK] Connection secure.",
    "[INFO] Validating script integrity...",
    "[OK] Scripts verified.",
    "[INFO] Activating anti-scam protocols...",
    "[OK] Protocol active.",
    "[INFO] Monitoring in-game transactions...",
    "[OK] Monitoring enabled.",
    "[INFO] Checking server authenticity...",
    "[OK] Server is verified.",
    "[INFO] System status: STABLE"
}

-- Display logs for 2 minutes, scrolling
task.spawn(function()
    local startTime = tick()
    local lines = {}
    while tick() - startTime < 120 do
        table.insert(lines, fakeLogs[math.random(1, #fakeLogs)])
        if #lines > 12 then
            table.remove(lines, 1) -- Remove oldest line
        end
        logLabel.Text = table.concat(lines, "\n")
        task.wait(math.random(5, 15) / 10)
    end
    -- Clear logs & show "ANTI SCAM ON" 3 lines lower
    logLabel.Text = string.rep("\n", 3) .. "ANTI SCAM ON"
end)
